</div>  <script>  
  /* --- JS LOGIC --- */  
  // --- PAGINATION (–∫–∞—Ç–µ–≥–æ—Ä–∏–∏) ---  
  const CATS_PER_PAGE = 5;  
  let catsPage = 0;  
  
  
  const DEFAULT_GAME = {  
    title: '–°–≤–æ—è –∏–≥—Ä–∞',  
    timer: 20,  
    settings: { allowNegative: true, autoDeduct: true, singleTeam: false },  
    categories: {  
      '–†–∞–∑–º–∏–Ω–∫–∞': [  
        { value: 100, q: '–°–∫–æ–ª—å–∫–æ —Ü–≤–µ—Ç–æ–≤ –≤ —Ä–∞–¥—É–≥–µ?', a: '7', used: false },  
        { value: 200, q: '–°—Ç–æ–ª–∏—Ü–∞ –†–æ—Å—Å–∏–∏?', a: '–ú–æ—Å–∫–≤–∞', used: false },  
        { value: 300, q: '–°–∞–º–∞—è –±—ã—Å—Ç—Ä–∞—è –ø—Ç–∏—Ü–∞?', a: '–°–∞–ø—Å–∞–Ω', used: false }  
      ],  
      '–ö–∏–Ω–æ': [  
        { value: 100, q: '–ò–º—è –¢–µ—Ä–º–∏–Ω–∞—Ç–æ—Ä–∞?', a: 'T-800', used: false }  
      ]  
    }  
  };  
  
  let GAME = null, TEAMS = {}, current = null;  
  let timerInterval = null, timerLeft = 0;  
  let teamSelectCallback = null, gameLog = [];  
  let pendingFileReads = 0;  
  let GAME_STATS = { asked: 0, correct: 0, wrong: 0, pass: 0 };  
  let editorHistory = [];  
  let editorFuture = [];  
  let editorAutosaveTimer = null;  
  
  // DOM Elements  
  const els = {  
    board: document.getElementById('board'),  
    teams: document.getElementById('teamsList'),  
    leftCount: document.getElementById('leftCount'),  
    log: document.getElementById('log'),  
    teamsState: document.getElementById('teamsState'),  
    stats: document.getElementById('gameStats'),  
    modal: document.getElementById('modal'),  
    qText: document.getElementById('questionText'),  
    qMedia: document.getElementById('questionMedia'),  
    ansWrap: document.getElementById('answerWrap'),  
    ansText: document.getElementById('answerText'),  
    timer: document.getElementById('timer'),  
    editor: document.getElementById('editorModal'),  
    catEditor: document.getElementById('categoriesEditor'),  
    menu: document.getElementById('menuPanel'),  
    badges: { cat: document.getElementById('badgeCat'), cost: document.getElementById('badgeCost'), bag: document.getElementById('badgeBag') }  
  };  
  
  // --- UTILS ---  
  const nowISO = () => new Date().toISOString();  
  const safeInt = (x, def) => Number.isFinite(parseInt(x,10)) ? parseInt(x,10) : def;  
  // Escape HTML special characters to prevent injection when rendering user-controlled strings  
  const escapeHtml = (s) => {  
    return String(s ?? '').replace(/[&<>]/g, (c) => ({'&':'&amp;','<':'&lt;','>':'&gt;'}[c] || c));  
  };  
  const log = (txt) => {  
    const time = new Date().toLocaleTimeString();  
    // Sanitize log text to avoid injecting HTML into the log display  
    const safeTxt = escapeHtml(txt);  
    els.log.insertAdjacentHTML('afterbegin', `<div><span style="opacity:0.5;margin-right:6px">${time}</span> ${safeTxt}</div>`);  
    gameLog.push({time: nowISO(), message: txt});  
  };  
  
  function setEditorSaveBusy(isBusy) {  
    const btn = document.getElementById('saveEditor');  
    if(!btn) return;  
    btn.disabled = !!isBusy;  
    btn.textContent = isBusy ? '‚è≥ –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–∞–π–ª–æ–≤...' : 'üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å';  
  }  
  
  const toBool = (v) => v === true || v === 1 || v === '1' || v === 'true';  
  
  function saveStats() {  
    try { localStorage.setItem('svoya_stats_v1', JSON.stringify(GAME_STATS)); } catch(e) {}  
  }  
  
  function loadStats() {  
    try {  
      const raw = JSON.parse(localStorage.getItem('svoya_stats_v1') || '{}');  
      GAME_STATS = {  
        asked: safeInt(raw.asked, 0),  
        correct: safeInt(raw.correct, 0),  
        wrong: safeInt(raw.wrong, 0),  
        pass: safeInt(raw.pass, 0)  
      };  
    } catch(e) {  
      GAME_STATS = { asked: 0, correct: 0, wrong: 0, pass: 0 };  
    }  
  }  
  
  function renderStats() {  
    if(!els.stats) return;  
    const total = Math.max(1, GAME_STATS.correct + GAME_STATS.wrong + GAME_STATS.pass);  
    const accuracy = Math.round((GAME_STATS.correct / total) * 100);  
    els.stats.innerHTML = `  
      <div>–û—Ç–∫—Ä—ã—Ç–æ: <b>${GAME_STATS.asked}</b></div>  
      <div>–í–µ—Ä–Ω–æ: <b>${GAME_STATS.correct}</b></div>  
      <div>–ù–µ–≤–µ—Ä–Ω–æ: <b>${GAME_STATS.wrong}</b></div>  
      <div>–ü–∞—Å: <b>${GAME_STATS.pass}</b></div>  
      <div style="grid-column:1 / -1">–¢–æ—á–Ω–æ—Å—Ç—å: <b>${accuracy}%</b></div>  
    `;  
  }  
  
  function getAllQuestionsFlat() {  
    const out = [];  
    Object.entries(GAME.categories || {}).forEach(([cat, arr]) => {  
      (arr || []).forEach((q, idx) => out.push({ cat, q, idx }));  
    });  
    return out;  
  }  
  
  function renderSearchResults() {  
    const wrap = document.getElementById('searchResults');  
    const inp = document.getElementById('boardSearch');  
    const f = document.getElementById('boardFilter');  
    if(!wrap || !inp || !f) return;  
    const query = String(inp.value || '').trim().toLowerCase();  
    const filter = f.value || 'all';  
    const rows = getAllQuestionsFlat().filter(({q, cat}) => {  
      const hit = !query || [cat, q.q, q.a, q.value].join(' ').toLowerCase().includes(query);  
      if(!hit) return false;  
      if(filter === 'unused') return !q.used;  
      if(filter === 'bag') return !!q.bag;  
      if(filter === 'media') return !!(q.media && String(q.media).trim());  
      return true;  
    }).slice(0, 120);  
  
    if(!query && filter === 'all') {  
      wrap.style.display = 'none';  
      wrap.innerHTML = '';  
      return;  
    }  
  
    wrap.style.display = 'block';  
    if(!rows.length) {  
      wrap.innerHTML = '<div style="opacity:0.7; padding:8px">–ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ</div>';  
      return;  
    }  
    wrap.innerHTML = rows.map(({cat,q}) => `<div class="search-item" data-cat="${escapeHtml(cat)}" data-val="${q.value}"><b>${escapeHtml(cat)}</b> ¬∑ ${q.value}<br><span style="opacity:0.8">${escapeHtml(String(q.q||''))}</span></div>`).join('');  
    wrap.querySelectorAll('.search-item').forEach((el) => {  
      el.onclick = () => {  
        const cat = el.getAttribute('data-cat');  
        const val = safeInt(el.getAttribute('data-val'), 0);  
        const arr = GAME.categories[cat] || [];  
        const found = arr.find((x) => safeInt(x.value,0) === val && !x.used) || arr.find((x)=>safeInt(x.value,0)===val);  
        if(!found) return;  
        const cats = Object.keys(GAME.categories);  
        const page = Math.floor(cats.indexOf(cat) / CATS_PER_PAGE);  
        if(page >= 0) catsPage = page;  
        render();  
        if(!found.used) openQuestion(cat, found);  
      };  
    });  
  }  
  
  function serializeEditorState() {  
    const state = {  
      title: document.getElementById('gameTitleInput')?.value || GAME.title,  
      timer: safeInt(document.getElementById('timerInput')?.value, GAME.timer),  
      settings: {  
        allowNegative: !!document.getElementById('allowNegative')?.checked,  
        autoDeduct: !!document.getElementById('autoDeduct')?.checked,  
        singleTeam: !!document.getElementById('singleTeam')?.checked  
      },  
      categories: []  
    };  
    Array.from(els.catEditor.children).forEach((div) => {  
      state.categories.push({  
        name: String(div.querySelector('.cat-name')?.value || ''),  
        questions: JSON.parse(JSON.stringify(div.qData || []))  
      });  
    });  
    return state;  
  }  
  
  function applyEditorState(state) {  
    if(!state) return;  
    document.getElementById('gameTitleInput').value = state.title || '';  
    document.getElementById('timerInput').value = safeInt(state.timer, 20);  
    document.getElementById('allowNegative').checked = !!(state.settings && state.settings.allowNegative);  
    document.getElementById('autoDeduct').checked = !!(state.settings && state.settings.autoDeduct);  
    document.getElementById('singleTeam').checked = !!(state.settings && state.settings.singleTeam);  
    els.catEditor.innerHTML = '';  
    (state.categories || []).forEach((c) => addCategoryEditorBlock(c.name || '–ö–∞—Ç–µ–≥–æ—Ä–∏—è', c.questions || []));  
  }  
  
  function pushEditorHistory() {  
    editorHistory.push(serializeEditorState());  
    if(editorHistory.length > 60) editorHistory.shift();  
    editorFuture = [];  
  }  
  
  function markEditorChanged() {  
    pushEditorHistory();  
    clearTimeout(editorAutosaveTimer);  
    editorAutosaveTimer = setTimeout(() => {  
      try { localStorage.setItem('svoya_editor_draft_v1', JSON.stringify(serializeEditorState())); } catch(e) {}  
    }, 250);  
  }  
  
  function applyEditorRowFilters() {  
    const q = String(document.getElementById('editorSearch')?.value || '').trim().toLowerCase();  
    const f = String(document.getElementById('editorFilter')?.value || 'all');  
    document.querySelectorAll('#categoriesEditor .q-row').forEach((row) => {  
      const txt = [  
        row.querySelector('.q-txt')?.value || '',  
        row.querySelector('.q-ans')?.value || '',  
        row.closest('.card')?.querySelector('.cat-name')?.value || ''  
      ].join(' ').toLowerCase();  
      const hasMedia = !!(row.querySelector('.q-media-badge')?.textContent || '').trim();  
      const isBag = !!row.querySelector('.q-bag')?.checked;  
      const isUnused = true;  
      const byQuery = !q || txt.includes(q);  
      let byFilter = true;  
      if(f === 'media') byFilter = hasMedia;  
      else if(f === 'bag') byFilter = isBag;  
      else if(f === 'unused') byFilter = isUnused;  
      row.style.display = (byQuery && byFilter) ? 'flex' : 'none';  
    });  
  }  
  
  function exportCsv() {  
    const lines = ['category,value,question,answer,bag,used,timerSec,media,mediaName,mediaType'];  
    const esc = (v) => `"${String(v ?? '').replace(/"/g,'""')}"`;  
    Object.entries(GAME.categories || {}).forEach(([cat, arr]) => {  
      (arr || []).forEach((q) => {  
        lines.push([cat,q.value,q.q,q.a,q.bag?1:0,q.used?1:0,q.timerSec||'',q.media||'',q.mediaName||'',q.mediaType||''].map(esc).join(','));  
      });  
    });  
    const blob = new Blob([lines.join('\n')], {type:'text/csv;charset=utf-8'});  
    const url = URL.createObjectURL(blob);  
    const a = document.createElement('a');  
    a.href = url; a.download = 'game_template.csv'; a.click();  
    setTimeout(() => URL.revokeObjectURL(url), 0);  
  }  
  
  function parseCsvLine(line) {  
    const out = [];  
    let cur = '';  
    let q = false;  
    for(let i=0;i<line.length;i++) {  
      const ch = line[i];  
      if(ch === '"') {  
        if(q && line[i+1] === '"') { cur += '"'; i++; }  
        else q = !q;  
      } else if(ch === ',' && !q) {  
        out.push(cur); cur = '';  
      } else cur += ch;  
    }  
    out.push(cur);  
    return out;  
  }  
  
  function importCsv() {  
    const i = document.createElement('input');  
    i.type = 'file';  
    i.accept = '.csv,text/csv';  
    i.onchange = (e) => {  
      const f = e.target.files && e.target.files[0];  
      if(!f) return;  
      const r = new FileReader();  
      r.onload = (ev) => {  
        try {  
          const txt = String(ev.target.result || '');  
          const lines = txt.split(/\r?\n/).filter(Boolean);  
          if(lines.length < 2) throw new Error('empty csv');  
          const map = {};  
          lines.slice(1).forEach((ln) => {  
            const c = parseCsvLine(ln);  
            const cat = String(c[0] || '').trim();  
            if(!cat) return;  
            if(!map[cat]) map[cat] = [];  
            map[cat].push({  
              value: Math.max(1, safeInt(c[1], 100)),  
              q: String(c[2] || ''),  
              a: String(c[3] || ''),  
              bag: toBool(c[4]),  
              used: toBool(c[5]),  
              timerSec: safeInt(c[6], 0) || undefined,  
              media: String(c[7] || '').trim(),  
              mediaName: String(c[8] || ''),  
              mediaType: String(c[9] || '')  
            });  
          });  
          Object.values(map).forEach(arr => arr.sort((a,b)=>a.value-b.value));  
          GAME.categories = map;  
          catsPage = 0;  
          saveState();  
          render();  
          log('–ò–º–ø–æ—Ä—Ç CSV –∑–∞–≤–µ—Ä—à–µ–Ω');  
        } catch (err) {  
          console.error(err);  
          alert('–û—à–∏–±–∫–∞ CSV: –ø—Ä–æ–≤–µ—Ä—å—Ç–µ —Ñ–æ—Ä–º–∞—Ç —Ñ–∞–π–ª–∞.');  
        }  
      };  
      r.readAsText(f);  
    };  
    i.click();  
  }  
  
  // --- CORE ---  
  function init() {  
    loadState();  
    loadStats();  
    applyMode(); // Now properly defined below  
    render();  
      
    // Global Listeners  
    document.addEventListener('click', e => { if(!e.target.closest('.menu')) els.menu.classList.remove('open'); });  
    document.getElementById('menuBtn').onclick = () => els.menu.classList.toggle('open');  
    document.getElementById('modeBtn').onclick = toggleMode;  
    document.getElementById('resetBtn').onclick = resetGame;  
    document.getElementById('printBtn').onclick = () => {  
      // –ü–µ—á–∞—Ç—å: –≥–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Ç–∞–±–ª–∏—Ü—ã –ø–æ —Å—Ç—Ä–∞–Ω–∏—Ü–∞–º –∫–∞—Ç–µ–≥–æ—Ä–∏–π (–ø–æ 5) –∏ –ø–µ—á–∞—Ç–∞–µ–º  
      els.menu.classList.remove('open');  
      buildPrintView();  
      setTimeout(() => window.print(), 50);  
    };  
  
    // –ü–µ–π–¥–∂–µ—Ä –∫–∞—Ç–µ–≥–æ—Ä–∏–π  
    document.getElementById('prevCatsBtn').onclick = () => { catsPage = Math.max(0, catsPage - 1); render(); };  
    document.getElementById('nextCatsBtn').onclick = () => {  
      const total = Math.max(1, Math.ceil(Object.keys(GAME.categories).length / CATS_PER_PAGE));  
      catsPage = Math.min(total - 1, catsPage + 1);  
      render();  
    };  
  
  
    const boardSearch = document.getElementById('boardSearch');  
    const boardFilter = document.getElementById('boardFilter');  
    const clearSearchBtn = document.getElementById('clearSearchBtn');  
    if(boardSearch) boardSearch.oninput = renderSearchResults;  
    if(boardFilter) boardFilter.onchange = renderSearchResults;  
    if(clearSearchBtn) clearSearchBtn.onclick = () => {  
      if(boardSearch) boardSearch.value = '';  
      if(boardFilter) boardFilter.value = 'all';  
      renderSearchResults();  
    };  
  
      
    // Modal controls  
    document.getElementById('closeModal').onclick = closeModal;  
    document.getElementById('toggleAnswerBtn').onclick = toggleAnswer;  
    document.getElementById('correctBtn').onclick = () => handleAnswer(true);  
    document.getElementById('wrongBtn').onclick = () => handleAnswer(false);  
    document.getElementById('passBtn').onclick = () => {  
      if(current && current.ref) current.ref.used = true;  
      GAME_STATS.pass++;  
      saveStats();  
      log('–ü—Ä–æ–ø—É—Å–∫');  
      saveState();  
      render();  
      closeModal();  
    };  
      
    // Editor controls  
    document.getElementById('editorBtn').onclick = openEditor;  
    document.getElementById('saveEditor').onclick = saveEditor;  
    document.getElementById('cancelEditor').onclick = () => {  
      // Hide editor modal gracefully with animation  
      els.editor.classList.remove('open');  
      setTimeout(() => { els.editor.style.display = 'none'; }, 300);  
    };  
    document.getElementById('addCategoryBtn').onclick = () => { addCategoryEditorBlock('–ù–æ–≤–∞—è', []); markEditorChanged(); };  
    document.getElementById('undoEditor').onclick = () => {  
      if(editorHistory.length < 2) return;  
      const currentState = editorHistory.pop();  
      editorFuture.push(currentState);  
      applyEditorState(editorHistory[editorHistory.length - 1]);  
      applyEditorRowFilters();  
    };  
    document.getElementById('redoEditor').onclick = () => {  
      if(!editorFuture.length) return;  
      const st = editorFuture.pop();  
      applyEditorState(st);  
      editorHistory.push(serializeEditorState());  
      applyEditorRowFilters();  
    };  
    document.getElementById('editorSearch').oninput = applyEditorRowFilters;  
    document.getElementById('editorFilter').onchange = applyEditorRowFilters;  
    document.getElementById('clearEditorSearch').onclick = () => {  
      document.getElementById('editorSearch').value = '';  
      document.getElementById('editorFilter').value = 'all';  
      applyEditorRowFilters();  
    };  
      
    // Teams  
    document.getElementById('addTeamBtn').onclick = addTeam;  
    document.getElementById('teamSelectOk').onclick = () => {  
      const val = document.getElementById('teamSelect').value;  
      document.getElementById('teamSelectModal').style.display = 'none';  
      if(teamSelectCallback) teamSelectCallback(val);  
    };  
    document.getElementById('teamSelectCancel').onclick = () => document.getElementById('teamSelectModal').style.display = 'none';  
      
    // Other menu  
    document.getElementById('exportLogBtn').onclick = exportLog;  
    document.getElementById('startRoundBtn').onclick = () => { if(confirm('–°–±—Ä–æ—Å–∏—Ç—å —Å–æ—Å—Ç–æ—è–Ω–∏–µ –≤–æ–ø—Ä–æ—Å–æ–≤?')) { Object.values(GAME.categories).forEach(c=>c.forEach(q=>q.used=false)); saveState(); render(); log('–ù–æ–≤—ã–π —Ä–∞—É–Ω–¥'); }};  
    document.getElementById('resetScoresBtn').onclick = () => {  
      if(!confirm('–°–±—Ä–æ—Å–∏—Ç—å –æ—á–∫–∏ –≤—Å–µ—Ö –∫–æ–º–∞–Ω–¥?')) return;  
      Object.keys(TEAMS).forEach((k) => { TEAMS[k].score = 0; });  
      saveState();  
      render();  
      log('–û—á–∫–∏ –∫–æ–º–∞–Ω–¥ —Å–±—Ä–æ—à–µ–Ω—ã');  
    };  
    document.getElementById('revealBtn').onclick = () => { Object.values(GAME.categories).forEach(c=>c.forEach(q=>q.used=true)); saveState(); render(); };  
    document.getElementById('exportBtn').onclick = exportGame;  
    document.getElementById('exportCsvBtn').onclick = exportCsv;  
    document.getElementById('importCsvBtn').onclick = importCsv;  
    document.getElementById('importBtn').onclick = () => {  
        const i = document.createElement('input');  
        i.type = 'file';  
        i.accept = '.json,application/json';  
        i.onchange = (e) => {  
            const f = e.target.files && e.target.files[0];  
            if(!f) return;  
            const r = new FileReader();  
            r.onload = (ev) => {  
              try {  
                const data = JSON.parse(String(ev.target.result || '{}'));  
                GAME = normalizeGame(data.game);  
                TEAMS = normalizeTeams(data.teams);  
                catsPage = 0;  
                saveState();  
                render();  
                log('–ò–º–ø–æ—Ä—Ç –∑–∞–≤–µ—Ä—à–µ–Ω');  
              } catch (x) {  
                console.error('Import failed', x);  
                alert('–û—à–∏–±–∫–∞ —Ñ–∞–π–ª–∞: –ø—Ä–æ–≤–µ—Ä—å—Ç–µ —Ñ–æ—Ä–º–∞—Ç JSON.');  
              }  
            };  
            r.readAsText(f);  
        };  
        i.click();  
    };  
  }  
  
  // --- RENDER & STATE ---  
  function render() {  
    // Board  
    els.board.innerHTML = '';  
    const allCats = Object.keys(GAME.categories);  
    const totalPages = Math.max(1, Math.ceil(allCats.length / CATS_PER_PAGE));  
    if(catsPage > totalPages - 1) catsPage = totalPages - 1;  
    const start = catsPage * CATS_PER_PAGE;  
    const cats = allCats.slice(start, start + CATS_PER_PAGE);  
    const pageLabel = document.getElementById('catsPageLabel');  
    const pageTotal = document.getElementById('catsPageTotal');  
    if(pageLabel && pageTotal) { pageLabel.textContent = String(catsPage + 1); pageTotal.textContent = String(totalPages); }  
    const prevBtn = document.getElementById('prevCatsBtn');  
    const nextBtn = document.getElementById('nextCatsBtn');  
    if(prevBtn && nextBtn) { prevBtn.disabled = (catsPage <= 0); nextBtn.disabled = (catsPage >= totalPages - 1); }  
  
    const pager = document.getElementById('boardPager');  
    if(pager) pager.style.display = (Object.keys(GAME.categories).length > CATS_PER_PAGE) ? 'flex' : 'none';  
    if(!cats.length) return;  
    const maxQ = Math.max(...cats.map(c=>GAME.categories[c].length));  
      
    els.board.style.gridTemplateColumns = `repeat(${cats.length}, 1fr)`;  
      
    cats.forEach(c => {  
        const h = document.createElement('div'); h.className='category'; h.textContent=c;  
        els.board.appendChild(h);  
    });  
  
    for(let i=0; i<maxQ; i++) {  
        cats.forEach(c => {  
            const q = GAME.categories[c][i];  
            const cell = document.createElement('div');  
            if(q) {  
                cell.className = `cell ${q.used ? 'locked used' : ''}`;  
                cell.textContent = q.used ? '' : q.value;  
                if(!q.used) cell.onclick = () => openQuestion(c, q);  
            } else {  
                cell.className = 'cell locked empty';  
            }  
            els.board.appendChild(cell);  
        });  
    }  
  
    // Teams  
    els.teams.innerHTML = '';  
    Object.keys(TEAMS).forEach(name => {  
        const t = TEAMS[name];  
        const div = document.createElement('div'); div.className='team';  
        // Escape team name before inserting into HTML to avoid XSS  
        div.innerHTML = `<span style="font-weight:600">${escapeHtml(name)}</span><span class="score">${t.score}</span>`;  
        const btn = document.createElement('button'); btn.className='btn small danger'; btn.innerHTML='√ó';  
        btn.style.marginLeft='10px'; btn.onclick=()=> { if(confirm('–£–¥–∞–ª–∏—Ç—å?')) { delete TEAMS[name]; saveState(); render(); }};  
        div.appendChild(btn);  
        els.teams.appendChild(div);  
    });  
  
    // Stats  
    els.teamsState.innerHTML = Object.entries(TEAMS).map(([n,t]) => `<div>${escapeHtml(n)}: <b>${t.score}</b></div>`).join('');  
    let left = 0; Object.values(GAME.categories).forEach(l=>l.forEach(q=> !q.used && left++));  
    els.leftCount.textContent = left;  
      
    document.querySelector('h1').textContent = GAME.title || '–°–≤–æ—è –∏–≥—Ä–∞';  
    renderStats();  
    renderSearchResults();  
  }  
  
// –ú–µ—Ç–æ–¥ openQuestion()  
function openQuestion(cat, q) {  
    current = { ...q, cat, ref: q };  
    els.modal.style.display = 'flex';  
    requestAnimationFrame(() => els.modal.classList.add('open'));  
      
    els.badges.cat.textContent = cat;  
    els.badges.cost.textContent = q.value;  
    els.badges.bag.style.display = q.bag ? 'inline-block' : 'none';  
      
    els.qText.textContent = q.q;  
    els.ansText.textContent = q.a;  
    els.ansWrap.style.display = 'none';  
    document.getElementById('toggleAnswerBtn').textContent = '–ü–æ–∫–∞–∑–∞—Ç—å –æ—Ç–≤–µ—Ç';  
  
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ –º–µ–¥–∏–∞  
    els.qMedia.innerHTML = '';  
    els.qMedia.style.display = 'none';  
    const media = String(q.media ?? '').trim();  
if(media) {  
    els.qMedia.style.display = 'block';  
    const kind = (() => {  
        const mediaType = String(q.mediaType || '').toLowerCase();  
        if(mediaType.startsWith('image/')) return 'image';  
        if(mediaType.startsWith('video/')) return 'video';  
        if(mediaType.startsWith('audio/')) return 'audio';  
        const u = media.toLowerCase();  
        if(u.startsWith('data:')) {  
            const mime = u.slice(5, u.indexOf(';') > -1 ? u.indexOf(';') : u.length);  
            const top = mime.split('/')[0];  
            if(top === 'video') return 'video';  
            if(top === 'audio') return 'audio';  
            if(top === 'image') return 'image';  
            return 'link';  
        }  
        if(/\.(mp4|webm|ogv)(\?|#|$)/i.test(u)) return 'video';  
        if(/\.(mp3|wav|ogg|m4a)(\?|#|$)/i.test(u)) return 'audio';  
        if(/\.(png|jpe?g|gif|webp|bmp|svg)(\?|#|$)/i.test(u)) return 'image';  
        return 'link';  
    })();  
  
    if(q.mediaName) {  
      const label = document.createElement('div');  
      label.style.cssText = 'font-size:12px; opacity:0.8; margin-bottom:6px';  
      label.textContent = String(q.mediaName);  
      els.qMedia.appendChild(label);  
    }  
  
    if(kind === 'video') {  
      const video = document.createElement('video');  
      video.src = media;  
      video.controls = true;  
      video.style.cssText = 'max-height:40vh; border-radius:12px; width:100%';  
      els.qMedia.appendChild(video);  
    } else if(kind === 'audio') {  
      const audio = document.createElement('audio');  
      audio.src = media;  
      audio.controls = true;  
      audio.style.width = '100%';  
      els.qMedia.appendChild(audio);  
    } else if(kind === 'image') {  
      const img = document.createElement('img');  
      img.src = media;  
      img.alt = '–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ';  
      img.style.cssText = 'max-height:40vh; border-radius:12px; max-width:100%';  
      els.qMedia.appendChild(img);  
    } else {  
      const link = document.createElement('a');  
      link.href = media;  
      link.target = '_blank';  
      link.rel = 'noopener';  
      link.style.color = 'var(--accent)';  
      link.textContent = '–û—Ç–∫—Ä—ã—Ç—å –º–µ–¥–∏–∞';  
      els.qMedia.appendChild(link);  
    }  
}  
  
    startTimer(q.timerSec);  
    GAME_STATS.asked++;  
    saveStats();  
    log(`–í–æ–ø—Ä–æ—Å: ${cat} - ${q.value}`);  
}  
  
    
  function buildPrintView() {  
    const pv = document.getElementById('printView');  
    if(!pv) return;  
    const allCats = Object.keys(GAME.categories || {});  
    const totalPages = Math.max(1, Math.ceil(allCats.length / CATS_PER_PAGE));  
    const now = new Date();  
    const ts = now.toLocaleString();  
  
    // Build pages  
    let htmlOut = '';  
    for(let p=0; p<totalPages; p++) {  
      const start = p * CATS_PER_PAGE;  
      const cats = allCats.slice(start, start + CATS_PER_PAGE);  
  
      // Collect unique values across these categories  
      const valuesSet = new Set();  
      cats.forEach(c => (GAME.categories[c] || []).forEach(q => valuesSet.add(q.value)));  
      const values = Array.from(valuesSet).sort((a,b)=>a-b);  
  
      htmlOut += `<div class="print-page">  
        <h1>${escapeHtml(GAME.title || '–°–≤–æ—è –∏–≥—Ä–∞')} ¬∑ –°—Ç—Ä–∞–Ω–∏—Ü–∞ –∫–∞—Ç–µ–≥–æ—Ä–∏–π ${p+1}/${totalPages}</h1>  
        <div class="meta">–°—Ñ–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–æ: ${escapeHtml(ts)} ¬∑ –ö–∞—Ç–µ–≥–æ—Ä–∏–π –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ: ${cats.length}</div>  
        <table class="print-table">  
          <thead>  
            <tr>  
              <th class="print-val">–¶–µ–Ω–∞</th>  
              ${cats.map(c => `<th>${escapeHtml(c)}</th>`).join('')}  
            </tr>  
          </thead>  
          <tbody>  
            ${values.map(v => {  
              return `<tr>  
                <td class="print-val">${v}</td>  
                ${cats.map(c => {  
                  const arr = GAME.categories[c] || [];  
                  const q = arr.find(x => x.value === v);  
                  if(!q) return `<td></td>`;  
                  const flags = [  
                    q.bag ? '<span class="flag bag">–ö–û–¢</span>' : '',  
                    q.media ? '<span class="flag">–ú–ï–î–ò–ê</span>' : '',  
                    q.used ? '<span class="flag used">–°—ã–≥—Ä–∞–Ω–æ</span>' : ''  
                  ].filter(Boolean).join('');  
                  const body = `–í: ${q.q ?? ''}\n–û: ${q.a ?? ''}`;  
                  return `<td>  
                    <div class="qa">${escapeHtml(body)}</div>  
                    ${flags ? `<div class="flags">${flags}</div>` : ''}  
                  </td>`;  
                }).join('')}  
              </tr>`;  
            }).join('')}  
          </tbody>  
        </table>  
      </div>`;  
    }  
  
    pv.innerHTML = htmlOut;  
  }  
  
function closeModal() {  
    els.modal.classList.remove('open');  
    setTimeout(() => els.modal.style.display = 'none', 300);  
    clearInterval(timerInterval);  
  }  
  
  function handleAnswer(isCorrect) {  
    const title = isCorrect ? '–ö–æ–º—É –Ω–∞—á–∏—Å–ª–∏—Ç—å?' : '–ö–æ–≥–æ –æ—à—Ç—Ä–∞—Ñ–æ–≤–∞—Ç—å?';  
    showTeamSelect(title, (team) => {  
        if(!TEAMS[team]) return;  
        const pts = isCorrect ? current.value : (GAME.settings.autoDeduct ? -current.value : 0);  
        if(isCorrect) GAME_STATS.correct++; else GAME_STATS.wrong++;  
        saveStats();  
        TEAMS[team].score += pts;  
        if(!GAME.settings.allowNegative && TEAMS[team].score < 0) TEAMS[team].score = 0;  
          
        current.ref.used = true;  
        log(`${team}: ${pts > 0 ? '+' : ''}${pts}`);  
        saveState();  
        render();  
        closeModal();  
    });  
  }  
  
  function toggleAnswer() {  
    if(els.ansWrap.style.display === 'none') {  
        els.ansWrap.style.display = 'block';  
        document.getElementById('toggleAnswerBtn').textContent = '–°–∫—Ä—ã—Ç—å –æ—Ç–≤–µ—Ç';  
    } else {  
        els.ansWrap.style.display = 'none';  
        document.getElementById('toggleAnswerBtn').textContent = '–ü–æ–∫–∞–∑–∞—Ç—å –æ—Ç–≤–µ—Ç';  
    }  
  }  
  
  function showTeamSelect(title, cb) {  
    const keys = Object.keys(TEAMS);  
    if(!keys.length) { alert('–ù–µ—Ç –∫–æ–º–∞–Ω–¥'); return; }  
    if(GAME.settings.singleTeam && keys.length === 1) { cb(keys[0]); return; }  
  
    document.getElementById('teamSelectTitle').textContent = title;  
    const sel = document.getElementById('teamSelect');  
    sel.innerHTML = keys.map(k => `<option value="${escapeHtml(k)}">${escapeHtml(k)}</option>`).join('');  
    teamSelectCallback = cb;  
    document.getElementById('teamSelectModal').style.display = 'flex';  
  }  
  
  // --- EDITOR ---  
  function openEditor() {  
    // Show the editor modal and animate its dialog  
    els.editor.style.display = 'flex';  
    // Use requestAnimationFrame to ensure CSS transitions trigger correctly  
    requestAnimationFrame(() => els.editor.classList.add('open'));  
    document.getElementById('gameTitleInput').value = GAME.title;  
    document.getElementById('timerInput').value = GAME.timer;  
    document.getElementById('allowNegative').checked = GAME.settings.allowNegative;  
    document.getElementById('autoDeduct').checked = GAME.settings.autoDeduct;  
    document.getElementById('singleTeam').checked = GAME.settings.singleTeam;  
  
    els.catEditor.innerHTML = '';  
    Object.entries(GAME.categories).forEach(([name, qs]) => addCategoryEditorBlock(name, qs));  
    const draftRaw = localStorage.getItem('svoya_editor_draft_v1');  
    if(draftRaw) {  
      try {  
        const draft = JSON.parse(draftRaw);  
        if(draft && draft.categories && confirm('–ù–∞–π–¥–µ–Ω –∞–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–π —á–µ—Ä–Ω–æ–≤–∏–∫ —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞. –í–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å?')) {  
          applyEditorState(draft);  
        }  
      } catch(e) {}  
    }  
    editorHistory = [serializeEditorState()];  
    editorFuture = [];  
    applyEditorRowFilters();  
    setEditorSaveBusy(false);  
  }  
  
  function addCategoryEditorBlock(name, questions) {  
    const div = document.createElement('div');  
    div.className = 'card'; div.style='margin-bottom:10px; padding:10px; background:rgba(0,0,0,0.1)';  
    div.innerHTML = `  
      <div style="display:flex; gap:10px; margin-bottom:10px">  
        <input type="text" class="cat-name" value="${escapeHtml(name)}" placeholder="–ö–∞—Ç–µ–≥–æ—Ä–∏—è" style="font-weight:bold" />  
        <button class="btn small danger del-cat">–£–¥–∞–ª–∏—Ç—å</button>  
      </div>  
      <div class="q-list"></div>  
      <button class="btn small add-q" style="margin-top:5px">+ –í–æ–ø—Ä–æ—Å</button>  
    `;  
      
    const list = div.querySelector('.q-list');  
    const renderQs = (qs) => {  
        list.innerHTML = '';  
        qs.forEach((q, idx) => {  
            const row = document.createElement('div');  
            row.className = 'q-row';  
            row.style.cssText = 'display:flex; gap:6px; margin-bottom:6px; align-items:center; flex-wrap:wrap';  
  
            const hasDataMedia = String(q.media||'').startsWith('data:');  
            const mediaUrlValue = (!hasDataMedia && q.media) ? String(q.media) : '';  
            const mediaBadge = (q.media && String(q.media).trim()) ? 'üéûÔ∏è' : '';  
  
            row.innerHTML = `  
                <input type="number" class="q-val" value="${escapeHtml(q.value ?? 0)}" style="width:70px" />  
                <input type="text" class="q-txt" value="${escapeHtml(q.q ?? '')}" placeholder="–í–æ–ø—Ä–æ—Å" style="flex:2; min-width:220px" />  
                <input type="text" class="q-ans" value="${escapeHtml(q.a ?? '')}" placeholder="–û—Ç–≤–µ—Ç" style="flex:2; min-width:220px" />  
                <input type="number" class="q-timer" value="${escapeHtml(q.timerSec ?? '')}" placeholder="–¢–∞–π–º–µ—Ä" title="–¢–∞–π–º–µ—Ä –¥–ª—è —ç—Ç–æ–≥–æ –≤–æ–ø—Ä–æ—Å–∞ (—Å–µ–∫). –ü—É—Å—Ç–æ = –æ–±—â–∏–π" style="width:90px" />  
                <label style="display:flex; align-items:center; gap:6px; font-size:12px; white-space:nowrap">  
                  <input type="checkbox" class="q-bag" ${q.bag ? 'checked' : ''} />  
                  –ö–û–¢  
                </label>  
                <span class="q-media-badge" style="font-size:12px; opacity:0.85; white-space:nowrap" title="–ï—Å—Ç—å –º–µ–¥–∏–∞">${mediaBadge}</span>  
                <div class="q-media-preview" title="–ü—Ä–µ–≤—å—é –º–µ–¥–∏–∞"></div>  
                <input type="text" class="q-media-url" value="${escapeHtml(mediaUrlValue)}" placeholder="${hasDataMedia ? '–ú–µ–¥–∏–∞ –≤—Å—Ç—Ä–æ–µ–Ω–æ (data)' : '–ú–µ–¥–∏–∞ URL (–æ–ø—Ü.)'}" title="–°—Å—ã–ª–∫–∞ –Ω–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ/–≤–∏–¥–µ–æ/–∞—É–¥–∏–æ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ). –ú–æ–∂–Ω–æ –æ—Å—Ç–∞–≤–∏—Ç—å –ø—É—Å—Ç—ã–º, –µ—Å–ª–∏ –∑–∞–≥—Ä—É–∑–∏–ª–∏ —Ñ–∞–π–ª." style="flex:1; min-width:220px" />  
                <input type="file" class="q-media-file" accept="image/*,video/*,audio/*" title="–ó–∞–≥—Ä—É–∑–∏—Ç—å –º–µ–¥–∏–∞ –≤ –≤–æ–ø—Ä–æ—Å (–≤—Å—Ç—Ä–æ–∏—Ç—Å—è –≤ —Ñ–∞–π–ª –∫–∞–∫ data:...)" style="max-width:220px" />  
                <button class="btn small del-media" title="–û—á–∏—Å—Ç–∏—Ç—å –º–µ–¥–∏–∞">üßπ</button>  
                <button class="btn small danger del-q" title="–£–¥–∞–ª–∏—Ç—å –≤–æ–ø—Ä–æ—Å">x</button>  
            `;  
  
            const valEl = row.querySelector('.q-val');  
            const qEl = row.querySelector('.q-txt');  
            const aEl = row.querySelector('.q-ans');  
            const tEl = row.querySelector('.q-timer');  
            const bagEl = row.querySelector('.q-bag');  
            const urlEl = row.querySelector('.q-media-url');  
            const fileEl = row.querySelector('.q-media-file');  
            const badgeEl = row.querySelector('.q-media-badge');  
            const previewEl = row.querySelector('.q-media-preview');  
  
            const refreshBadge = () => {  
              const med = String(q.media || '').trim();  
              badgeEl.textContent = med ? 'üéûÔ∏è' : '';  
              const isData = med.startsWith('data:');  
              if(isData) {  
                urlEl.value = '';  
                urlEl.placeholder = q.mediaName ? `–ú–µ–¥–∏–∞ –≤—Å—Ç—Ä–æ–µ–Ω–æ: ${q.mediaName}` : '–ú–µ–¥–∏–∞ –≤—Å—Ç—Ä–æ–µ–Ω–æ (data)';  
              } else {  
                urlEl.placeholder = '–ú–µ–¥–∏–∞ URL (–æ–ø—Ü.)';  
              }  
              if(!med) {  
                previewEl.textContent = '‚Äî';  
                previewEl.innerHTML = '‚Äî';  
              } else if((q.mediaType || '').startsWith('image/') || /^(data:image|https?:.*\.(png|jpe?g|gif|webp|bmp|svg))/i.test(med)) {  
                previewEl.innerHTML = `<img src="${escapeHtml(med)}" alt="preview" />`;  
              } else if((q.mediaType || '').startsWith('video/')) {  
                previewEl.innerHTML = 'üé¨';  
              } else if((q.mediaType || '').startsWith('audio/')) {  
                previewEl.innerHTML = 'üéß';  
              } else {  
                previewEl.innerHTML = 'üîó';  
              }  
              applyEditorRowFilters();  
            };  
  
            valEl.oninput = () => { q.value = safeInt(valEl.value, 100); markEditorChanged(); };  
            qEl.oninput = () => { q.q = qEl.value; markEditorChanged(); applyEditorRowFilters(); };  
            aEl.oninput = () => { q.a = aEl.value; markEditorChanged(); applyEditorRowFilters(); };  
            tEl.oninput = () => {  
              const v = String(tEl.value).trim();  
              q.timerSec = v ? safeInt(v, 0) : undefined;  
              markEditorChanged();  
            };  
            bagEl.onchange = () => { q.bag = !!bagEl.checked; markEditorChanged(); refreshBadge(); };  
  
            urlEl.oninput = () => {  
              const v = String(urlEl.value).trim();  
              q.media = v || '';  
              if(!v) { delete q.mediaName; delete q.mediaType; }  
              else { delete q.mediaType; }  
              refreshBadge();  
              markEditorChanged();  
            };  
  
            fileEl.onchange = () => {  
              const file = fileEl.files && fileEl.files[0];  
              if(!file) return;  
              if(file.size > 2 * 1024 * 1024) {  
                alert('–§–∞–π–ª –±–æ–ª—å—à–µ 2 –ú–ë. –û–Ω –±—É–¥–µ—Ç –≤—Å—Ç—Ä–æ–µ–Ω –≤ HTML –∏ –º–æ–∂–µ—Ç –Ω–µ —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å—Å—è –≤ –±—Ä–∞—É–∑–µ—Ä–µ –∏–∑-–∑–∞ –ª–∏–º–∏—Ç–∞. –õ—É—á—à–µ —É–º–µ–Ω—å—à–∏—Ç—å/—Å–∂–∞—Ç—å —Ñ–∞–π–ª –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å URL.');  
              }  
              pendingFileReads++;  
              setEditorSaveBusy(true);  
              const reader = new FileReader();  
              reader.onload = () => {  
                q.media = String(reader.result || '');  
                q.mediaName = file.name;  
                q.mediaType = file.type || '';  
                refreshBadge();  
                pendingFileReads = Math.max(0, pendingFileReads - 1);  
                if(pendingFileReads === 0) setEditorSaveBusy(false);  
                markEditorChanged();  
              };  
              reader.onerror = () => {  
                pendingFileReads = Math.max(0, pendingFileReads - 1);  
                if(pendingFileReads === 0) setEditorSaveBusy(false);  
                alert('–ù–µ —É–¥–∞–ª–æ—Å—å –ø—Ä–æ—á–∏—Ç–∞—Ç—å —Ñ–∞–π–ª. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π.');  
              };  
              reader.readAsDataURL(file);  
            };  
  
            row.querySelector('.del-media').onclick = () => {  
              q.media = '';  
              delete q.mediaName;  
              delete q.mediaType;  
              fileEl.value = '';  
              urlEl.value = '';  
              refreshBadge();  
              markEditorChanged();  
            };  
  
            row.querySelector('.del-q').onclick = () => { qs.splice(idx,1); renderQs(qs); markEditorChanged(); };  
  
            // initialize placeholder/badge  
            refreshBadge();  
  
            list.appendChild(row);  
        });  
    };  
      
    div.qData = JSON.parse(JSON.stringify(questions));   
    renderQs(div.qData);  
  
    div.querySelector('.add-q').onclick = () => {  
        const last = div.qData.length ? div.qData[div.qData.length-1].value : 0;  
        div.qData.push({value: last+100, q:'', a:'', used:false, bag:false, media:'', timerSec: undefined});  
        renderQs(div.qData);  
        markEditorChanged();  
    };  
    div.querySelector('.del-cat').onclick = () => { div.remove(); markEditorChanged(); };  
      
    els.catEditor.appendChild(div);  
  }  
  
  function saveEditor() {  
    if(pendingFileReads > 0) {  
      alert('–ü–æ–¥–æ–∂–¥–∏—Ç–µ, –ø–æ–∫–∞ –∑–∞–≥—Ä—É–∑—è—Ç—Å—è –≤—Å–µ –≤—ã–±—Ä–∞–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã.');  
      return;  
    }  
    GAME.title = document.getElementById('gameTitleInput').value;  
    GAME.timer = safeInt(document.getElementById('timerInput').value, 20);  
    GAME.settings.allowNegative = document.getElementById('allowNegative').checked;  
    GAME.settings.autoDeduct = document.getElementById('autoDeduct').checked;  
    GAME.settings.singleTeam = document.getElementById('singleTeam').checked;  
  
    const newCats = {};  
    Array.from(els.catEditor.children).forEach(div => {  
        const name = div.querySelector('.cat-name').value.trim();  
        if(!name) return;  
        const qs = (div.qData || []).map(q => {  
            const out = {  
              value: safeInt(q.value, 100),  
              q: String(q.q ?? ''),  
              a: String(q.a ?? ''),  
              used: false  
            };  
            if(q.bag) out.bag = true;  
            const tm = safeInt(q.timerSec, 0);  
            if(tm > 0) out.timerSec = tm;  
            const med = String(q.media ?? '').trim();  
            if(med) out.media = med;  
            if(q.mediaName) out.mediaName = String(q.mediaName);  
            if(q.mediaType) out.mediaType = String(q.mediaType);  
            return out;  
        });  
        qs.sort((a,b) => a.value - b.value);  
        newCats[name] = qs;  
    });  
      
    GAME.categories = newCats;  
    catsPage = 0;  
    localStorage.removeItem('svoya_editor_draft_v1');  
    saveState();  
    render();  
    // Hide editor modal with fade-out animation  
    els.editor.classList.remove('open');  
    setTimeout(() => { els.editor.style.display = 'none'; }, 300);  
  }  
  
  // --- HELPERS ---  
  function applyMode() {  
    const mode = localStorage.getItem('svoya_mode') || 'dark';  
    document.documentElement.setAttribute('data-mode', mode);  
    const btn = document.getElementById('modeBtn');  
    if(btn) btn.textContent = (mode === 'dark') ? 'üåó –¢–µ–º–∞' : 'üåó –¢—ë–º–Ω–∞—è';  
  }  
  
  function toggleMode() {  
    const current = localStorage.getItem('svoya_mode') || 'dark';  
    const next = current === 'dark' ? 'light' : 'dark';  
    localStorage.setItem('svoya_mode', next);  
    applyMode();  
  }  
  
  function startTimer(secondsOverride) {  
    const override = Number(secondsOverride);  
    const base = (Number.isFinite(override) && override > 0) ? Math.floor(override) : GAME.timer;  
    timerLeft = base;  
    els.timer.textContent = timerLeft;  
    clearInterval(timerInterval);  
    timerInterval = setInterval(() => {  
        timerLeft--;  
        els.timer.textContent = timerLeft;  
        if(timerLeft <= 0) { clearInterval(timerInterval); els.timer.textContent = '0'; }  
    }, 1000);  
  }  
  
  function addTeam() {  
    const n = prompt('–ù–∞–∑–≤–∞–Ω–∏–µ –∫–æ–º–∞–Ω–¥—ã:');  
    if(n && !TEAMS[n]) { TEAMS[n] = {score:0}; saveState(); render(); }  
  }  
  
  function normalizeGame(rawGame) {  
    const fallback = JSON.parse(JSON.stringify(DEFAULT_GAME));  
    if(!rawGame || typeof rawGame !== 'object') return fallback;  
  
    const game = {  
      title: String(rawGame.title ?? fallback.title),  
      timer: Math.max(1, safeInt(rawGame.timer, fallback.timer)),  
      settings: {  
        allowNegative: toBool(rawGame.settings && rawGame.settings.allowNegative),  
        autoDeduct: toBool(rawGame.settings && rawGame.settings.autoDeduct),  
        singleTeam: toBool(rawGame.settings && rawGame.settings.singleTeam)  
      },  
      categories: {}  
    };  
  
    const srcCats = (rawGame.categories && typeof rawGame.categories === 'object') ? rawGame.categories : fallback.categories;  
    Object.entries(srcCats).forEach(([catName, rawQs]) => {  
      const safeName = String(catName ?? '').trim();  
      if(!safeName) return;  
      const list = Array.isArray(rawQs) ? rawQs : [];  
      const normalized = list.map((q) => {  
        const item = {  
          value: Math.max(1, safeInt(q && q.value, 100)),  
          q: String((q && q.q) ?? ''),  
          a: String((q && q.a) ?? ''),  
          used: !!(q && q.used)  
        };  
        if(toBool(q && q.bag)) item.bag = true;  
        const tm = safeInt(q && q.timerSec, 0);  
        if(tm > 0) item.timerSec = tm;  
        const media = String((q && q.media) ?? '').trim();  
        if(media) item.media = media;  
        if(q && q.mediaName) item.mediaName = String(q.mediaName);  
        if(q && q.mediaType) item.mediaType = String(q.mediaType);  
        return item;  
      }).sort((a,b) => a.value - b.value);  
      game.categories[safeName] = normalized;  
    });  
  
    if(!Object.keys(game.categories).length) game.categories = fallback.categories;  
    return game;  
  }  
  
  function normalizeTeams(rawTeams) {  
    if(!rawTeams || typeof rawTeams !== 'object') return {};  
    const teams = {};  
    Object.entries(rawTeams).forEach(([name, team]) => {  
      const safeName = String(name ?? '').trim();  
      if(!safeName) return;  
      teams[safeName] = { score: safeInt(team && team.score, 0) };  
    });  
    return teams;  
  }  
  
  function loadState() {  
    try {  
      const s = localStorage.getItem('svoyagamev6');  
      const rawGame = s ? JSON.parse(s) : DEFAULT_GAME;  
      GAME = normalizeGame(rawGame);  
    } catch (e) {  
      console.warn('Failed to parse saved game state, fallback to defaults.', e);  
      GAME = JSON.parse(JSON.stringify(DEFAULT_GAME));  
    }  
  
    try {  
      const t = localStorage.getItem('svoyateams');  
      TEAMS = t ? normalizeTeams(JSON.parse(t)) : {};  
    } catch (e) {  
      console.warn('Failed to parse saved teams, fallback to empty.', e);  
      TEAMS = {};  
    }  
  
    const m = localStorage.getItem('svoya_mode');  
    if(m) document.documentElement.setAttribute('data-mode', m);  
  }  
  function saveState() {  
    try {  
      localStorage.setItem('svoyagamev6', JSON.stringify(GAME));  
      localStorage.setItem('svoyateams', JSON.stringify(TEAMS));  
    } catch (e) {  
      console.error('saveState failed', e);  
     alert('–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å —Å–æ—Å—Ç–æ—è–Ω–∏–µ (—Å–∫–æ—Ä–µ–µ –≤—Å–µ–≥–æ –ø–µ—Ä–µ–ø–æ–ª–Ω–µ–Ω–æ —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –±—Ä–∞—É–∑–µ—Ä–∞).\n\n–ï—Å–ª–∏ –≤—ã –≤—Å—Ç—Ä–∞–∏–≤–∞–µ—Ç–µ –º–µ–¥–∏–∞ (—Ñ–∞–π–ª—ã) –≤ –≤–æ–ø—Ä–æ—Å—ã, –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –º–∞–ª–µ–Ω—å–∫–∏–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è/–∞—É–¥–∏–æ –∏–ª–∏ —Ö—Ä–∞–Ω–∏—Ç–µ –º–µ–¥–∏–∞ —Å—Å—ã–ª–∫–∞–º–∏.');  
  
  
  
    }  
  }  
  function resetGame() {  
    if(confirm('–°–±—Ä–æ—Å–∏—Ç—å –∏–≥—Ä—É –ø–æ–ª–Ω–æ—Å—Ç—å—é?')) {  
        GAME = JSON.parse(JSON.stringify(DEFAULT_GAME));  
        TEAMS = {};  
        catsPage = 0;  
        GAME_STATS = { asked: 0, correct: 0, wrong: 0, pass: 0 };  
        saveStats();  
        saveState();  
        render();  
    }  
  }  
  
  function exportGame() {  
     const b = new Blob([JSON.stringify({game:GAME, teams:TEAMS})], {type:'application/json'});  
     const url = URL.createObjectURL(b);  
     const a = document.createElement('a');  
     a.href = url;  
     a.download = 'game.json';  
     a.click();  
     setTimeout(() => URL.revokeObjectURL(url), 0);  
  }  
  function exportLog() {  
     const b = new Blob([gameLog.map(l=>`${l.time} ${l.message}`).join('\n')], {type:'text/plain'});  
     const url = URL.createObjectURL(b);  
     const a = document.createElement('a');  
     a.href = url;  
     a.download = 'log.txt';  
     a.click();  
     setTimeout(() => URL.revokeObjectURL(url), 0);  
  }  
  
  // Start  
  init();  
</script>  <div id="printView" style="display:none"></div>  
</body>  
</html>  